<!--pages/main/main.wxml-->
<scroll-view class='scbg' scroll-y="true">
  <!--搜索框-->
  <view class="page">
    <view class="page__bd">
      <mp-searchbar bindselectresult="selectResult" search="{{search}}"></mp-searchbar>
    </view>
  </view>

  <!-- 顶部推荐图片轮播 -->
  <view class='carousel'>
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{imgUrls}}" wx:key="*this">
        <swiper-item>
          <image src="{{item}}" class="slide-image" mode='scaleToFill' />
        </swiper-item>
      </block>
    </swiper>
  </view>

  <!-- 分区入口-->
  <view class='panel'>
    <!-- 内容 -->
    <view class='menu'>
      <text>| 功能模块</text>
    </view>
    <view class>
      <view class='firstB'>
        <view class='funcList' wx:for="{{contentImgUrls1}}" wx:key="url" wx:for-item="item">
          <navigator url="{{item.page}}">
            <image class='showpic' src="{{item.url}}" mode='scaleToFill'></image>
            <text class='showtext'>{{item.title}}</text>
          </navigator>
        </view>
      </view>

      <view class='secondB'>
        <view class='funcList' wx:for="{{contentImgUrls2}}" wx:key="url" wx:for-item="item">
          <navigator url="{{item.page}}">
            <image class='showpic' src="{{item.url}}" mode='scaleToFill'></image>
            <text class='showtext'>{{item.title}}</text>
          </navigator>
        </view>
      </view>

    </view>
  </view>

  <view class='panel'>
    <!-- 实时动态内容 -->
    <view class='menu'>
      <text>| 实时动态</text>
    </view>

    <block wx:for="{{list}}" wx:for-item="itemName" wx:for-index='id'>
      <view class='box'>
        <view class='firstblock'>
          <image class='touxiang' src='{{itemName.face_url}}'></image>
          <view class='person'>
            <view class='name'>
              <text class='showname'>{{itemName.username}}</text>
            </view>
            <view class='time'>
              <text class='showtime'>{{itemName.send_timestamp}}</text>
            </view>
          </view>
        </view>

        <view class='secondblock'>
          <view class='title'>
            <text class='showtitle'>{{itemName.title}}</text>
          </view>
          <view class='content'>
            <text class='showcontent'>{{itemName.content}}</text>
          </view>

          <block wx:for="{{itemName.img_list}}" wx:for-item="item_name" wx:for-index='id'>
            <view class='post_images'>
              <image class='img' src='{{item_name.img_url}}'></image>
            </view>
          </block>
        </view>

        <view class='thirdblock'>
          <image class='like' src='/images/灰点赞.png'></image>
          <text class='num'>{{itemName.total_likes}}</text>
        </view>
      </view>
    </block>
  </view>

</scroll-view>





<!--底部栏页面引用-->
<include src="/pages/bottom_menu/bottom_menu" />