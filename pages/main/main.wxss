/* pages/main/main.wxss */
@import "/pages/bottom_menu/bottom_menu";

page {
  background-color: white;
}

.scbg {
  background-color: #EFEFEF;
  width: 100%;
  height: 91%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}

.carousel {
  background-color: white;
  margin-left: 4%;
  margin-right: 4%;
  border-bottom: 20rpx solid #EFEFEF;
}

.selection {
  background-color: white;
  margin-top: 5px;
  margin-left: 4%;
  margin-right: 4%;
  border-bottom: 20rpx solid #EFEFEF;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.menu {
  font-size: 14px;
  font-weight: bold;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  margin: 5px 10px 2px;
}

.firstB {
  margin-top: 5rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  height: 200rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.secondB {
  margin-top: 5rpx;
  height: 200rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 20rpx;
}

.funcList{
  margin-top: 10rpx;
}

.funcListInfo{
  border-top:2px; 
  border-bottom:2px; 
  display: flex;
  padding: 2px 0;       /* 图片与字的间距 */
}

.showpic {   /* 图片大小 */
  display: block;
  width: 110px;
  height: 85px;
  margin: 0 auto;
  padding-top: 2px;
}

.showtext{
  display: block;
  text-align: center;
  width: 100%;
  font-size: 10px;
  color: #333;
  padding-top: 2px;
}
