/* pages/main/main.wxss */
@import "/pages/bottom_menu/bottom_menu";

page {
  background-color: white;
}

.scbg {
  background-color: #EFEFEF;
  width: 100%;
  height: 91%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}

.carousel {
  background-color: white;
  margin-left: 4%;
  margin-right: 4%;
  border-bottom: 20rpx solid #EFEFEF;
}

.panel {
  background-color: white;
  margin-top: 5px;
  margin-left: 4%;
  margin-right: 4%;
  border-bottom: 20rpx solid #EFEFEF;
}

.slide-image {
  width: 100%;
  height: 120%;
}

.menu {
  font-size: 14px;
  font-weight: bold;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  margin: 5px 10px 2px;
}

.firstB {
  margin-top: 5rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  height: 200rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.secondB {
  margin-top: 12rpx;
  height: 200rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 20rpx;
}

.funcList{
  margin-top: 10rpx;
  width: 225rpx;
}

.funcListInfo{
  border-top:2px; 
  border-bottom:2px; 
  display: flex;
  padding-top: 10rpx;      /* 图片与字的间距 */
}

.showpic {   /* 图片大小 */
  display: block;
  width: 200rpx;
  height: 180rpx;
  margin-left: 5%;
  margin-right: 5%;
  padding-top: 2px;
}

.showtext{ /* 分区字体调整 */
  display: block;
  text-align: center;
  width: 100%;
  font-size: 10px;
  color: #333;
  padding-top: 2px;
}

/* 实时动态的样式设置 */

.box {
  width: 100%;
  background-color: white;
  padding-top: 30rpx;
  border-bottom: 20rpx solid #EFEFEF;
}

.firstblock {
  height: 110rpx;
  width: 92%;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.touxiang {
  width: 100rpx;
  height: 100rpx;
}

.person {
  width: 75%;
  height: 100rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.name {
  display: flex;
  justify-content: flex-start;
  margin-top: 3rpx;
  font-size: 35rpx;
  flex-direction: row;
}
.showname {
  font-size: 34rpx;
  color: #0d4197;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.time {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  flex-direction: row;
}
.showtime {
  font-size: 25rpx;
  color: #5e5f5f;
  font-family: PingFangSC-regular;
}


.secondblock {
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #bbbbbb;
}

.title {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  flex-direction: row;
}
.showtitle {
  font-size: 30rpx;
  font-weight: bold;
  color: #101010;
  word-break: normal;
}

.content {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  flex-direction: row;
}
.showcontent {
  font-size: 29rpx;
  color: #101010;
  word-break: normal;
}

.post_images {
  width: 200rpx;
}
.img {
  width: 180rpx;
  height: 180rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}


.thirdblock {
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
}

.like {
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.num {
  height: 52rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #101010;
}