/* pages/bottom_menu/bottom_menu.wxss */
.bottom_row {
  background-color: white;
  width: 100%;
  height: 9%;
  position: fixed;
  bottom: 2rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottom_tab {
  width: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bottomImage {
  margin-top: 10rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
}

.bottomImage1 {
  margin-top: 10rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}

.bottom_tab_text {
  font-size: 25rpx;
  color: #045828;
  font-family: PingFangSC-regular;
}