/* pages/square/square.wxss */
@import "/pages/bottom_menu/bottom_menu";

page {
  background-color: #EFEFEF;
}

.scbg {
  background-color: #EFEFEF;
  width: 100%;
  height: 91%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}

.box {
  width: 100%;
  background-color: white;
  padding-top: 30rpx;
  border-bottom: 20rpx solid #EFEFEF;
}

.firstblock {
  height: 110rpx;
  width: 92%;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.touxiang {
  width: 100rpx;
  height: 100rpx;
}

.person {
  width: 75%;
  height: 100rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.name {
  display: flex;
  justify-content: flex-start;
  margin-top: 3rpx;
  font-size: 35rpx;
  flex-direction: row;
}
.showname {
  font-size: 34rpx;
  color: #0d4197;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.time {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  flex-direction: row;
}
.showtime {
  font-size: 25rpx;
  color: #5e5f5f;
  font-family: PingFangSC-regular;
}


.secondblock {
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #bbbbbb;
}

.title {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  flex-direction: row;
}
.showtitle {
  font-size: 30rpx;
  font-weight: bold;
  color: #101010;
  word-break: normal;
}

.content {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  flex-direction: row;
}
.showcontent {
  font-size: 29rpx;
  color: #101010;
  word-break: normal;
}

.post_images {
  width: 200rpx;
}
.img {
  width: 180rpx;
  height: 180rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}


.thirdblock {
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
}

.like {
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.num {
  height: 52rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #101010;
}