/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


.scbg {
  background-color: #EFEFEF;
  width: 100%;
  height: 91%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
  display:flex;
}

.box {
  width: 100%;
  background-color: white;
  padding-top: 30rpx;
  border-bottom: 20rpx solid #EFEFEF;
}

.firstblock {
  height: 110rpx;
  width: 92%;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.touxiang {
  width: 100rpx;
  height: 100rpx;
}

.person {
  width: 75%;
  height: 100rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.name {
  display: flex;
  justify-content: flex-start;
  margin-top: 3rpx;
  font-size: 35rpx;
  flex-direction: row;
}
.showname {
  font-size: 34rpx;
  color: #0d4197;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.time {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  flex-direction: row;
}
.showtime {
  font-size: 25rpx;
  color: #5e5f5f;
  font-family: PingFangSC-regular;
}


.secondblock {
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  display:block;
}

.title {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  flex-direction: row;
}
.showtitle {
  font-size: 30rpx;
  font-weight: bold;
  color: #101010;
  word-break: normal;
}

.content {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  flex-direction: row;
}
.showcontent {
  font-size: 29rpx;
  color: #101010;
  word-break: normal;
}

.thirdblock {
  margin-top: 20rpx;
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
}

.icon {
  margin-top: 5rpx;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
  vertical-align: top;
}

.comment-view{
  margin-left:300rpx;
}

.num {
  height: 52rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #101010;
  vertical-align: top;
}


/* 图片 */
.photo-view{
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  display:inline-block;
}

.photo{  
  float: left;
  margin-right: 10rpx;
  margin-top: 10rpx;
}